% RÈGLES

% Tout propriétaire de chien est un ami des animaux
ami_animaux(X) :-
    possede(X, chien).

% Aucun ami des animaux ne tue un animal
% (représenté par une négation logique)
ne_tue_pas(X, Y) :-
    ami_animaux(X),
    animal(Y).

% FAITS

animal(chat).
animal(chien).
possede(jack, chien).            % Jack possède un chien


% Une personne a tué un animal
tue(X, Y) :- 
    \+ ne_tue_pas(X, Y).